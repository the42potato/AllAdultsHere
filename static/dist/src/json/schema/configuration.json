{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Site Configuration",
    "type": "object",
    "required": ["PAGELINKS", "NAV_LINK_MAX"],
    "properties": {
        "PAGELINKS": {
            "type": "object",
            "additionalProperties": {
                "type": "string",
                "pattern": "^[A-Za-z_/]+$"
            }
        },
        "NAV_LINK_MAX": {
            "type": "integer",
            "minimum": 3,
            "maximum": 10
        }
    }
}