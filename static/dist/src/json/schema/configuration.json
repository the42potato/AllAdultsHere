{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Site Configuration",
    "type": "object",
    "required": ["META", "PAGELINKS", "NAV_LINK_MAX", "ERRORS", "IMPORT_JS"],
    "properties": {
        "META": {
            "type": "object",
            "required": ["author", "description"],
            "properties": {
                "author": {
                    "type": "string",
                    "maxLength": 30
                },
                "description": {
                    "type": "string",
                    "maxLength": 150
                }
            }
        },
        "PAGELINKS": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "link": {
                        "type": "string",
                        "pattern": "^[A-Za-z_/]+$"
                    },
                    "label": {
                        "type": "string"
                    },
                    "shorthand": {
                        "type": "string",
                        "maxLength": 7
                    }
                }
            }
        },
        "NAV_LINK_MAX": {
            "type": "integer",
            "minimum": 3,
            "maximum": 10
        },
        "FOOTER_LINK_MAX": {
            "type": "integer",
            "minimum": 3,
            "maximum": 16
        },
        "FOOTER_LINK_CUTOFF": {
            "type": "integer",
            "minimum": 3,
            "maximum": 16
        },
        "IMPORT_JS": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[A-Za-z_/]+$"
            }
        },
        "ACTIVE_FOOTERS": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[A-Za-z_/]+$"
            }
        },
        "ERRORS": {
            "type": "object",
            "required": ["codes"],
            "properties": {
                "codes": {
                    "type": "object",
                    "required": ["400", "401", "403", "404", "500", "501", "503"],
                    "properties": {
                        "400": {
                            "$ref": "#/$defs/errorObject"
                        },
                        "401": {
                            "$ref": "#/$defs/errorObject"
                        },
                        "403": {
                            "$ref": "#/$defs/errorObject"
                        },
                        "404": {
                            "$ref": "#/$defs/errorObject"
                        },
                        "500": {
                            "$ref": "#/$defs/errorObject"
                        },
                        "501": {
                            "$ref": "#/$defs/errorObject"
                        },
                        "503": {
                            "$ref": "#/$defs/errorObject"
                        },
                        "418": {
                            "$ref": "#/$defs/errorObject"
                        }
                    }
                },
                "messages": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "custom_codes": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/errorObject"
                    }
                }
            }
        }
    },
    "$defs": {
        "errorObject": {
            "type": "object",
            "required": ["image", "splashes"],
            "properties": {
                "image": {
                    "type": "string"
                },
                "splashes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "description": {
                    "type": "string"
                }
            }
        }
    }
}