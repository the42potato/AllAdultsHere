{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Unnamed CardList",
    "type": "object",
    "required": ["title", "cards"],
    "properties": {
        "title": {
            "type": "string"
        },
        "subtitle": {
            "type": "string"
        },
        "cards": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["title"],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "subheading": {
                        "type": "string"
                    },
                    "list": {
                        "type": "array",
                        "minItems": 1
                    },
                    "image": {
                        "type": "string",
                        "pattern": "^[^\\s]+\\.(png|jpg|jpeg|gif|webp|svg)$"
                    }
                }
            },
            "minItems": 1
        }
    }
}