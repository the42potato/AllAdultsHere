{
    "title": "Potato and Leek Soup",
    "source": {
        "href": "http://www.sweetsugarbean.com/2011/10/#:~:text=Cheesy%20Bacon%2C%20Potato%20and%20Leek%20Soup",
        "displaytext": "Renee Kohlman"
    },
    "meal_type": ["lunch", "dinner"],
    "prep_type": "stovetop",
    "total_prep_time_minutes": [40, 60],
    "ingredient_prep_time_minutes": [10, 20],
    "cook_time_minutes": [30, 40],
    "servings": [4, 6],
    "ingredients": [
        {
            "amount": "2 tablespoons",
            "item": "butter"
        },
        {
            "amount": "3",
            "item": "leeks",
            "notes": [
                "white part only"
            ]
        },
        {
            "amount": "2 cloves",
            "item": "garlic"
        },
        {
            "amount": "8",
            "item": "potatoes",
            "notes": [
                "Yukon Golds, or other white"
            ]
        },
        {
            "amount": "5 cups",
            "item": "vegetable stock"
        },
        {
            "amount": "2 tablespoons",
            "item": "Dijon mustard"
        },
        {
            "item": "Cayenne pepper"
        },
        {
            "item": "Salt and pepper"
        },
        {
            "item": "1 cup cheese",
            "notes": [
                "such as old cheddar or Gouda"
            ]
        },
        {
            "amount": "1/2 cup",
            "item": "whipping cream"
        },
        {
            "amount": "1/2 cup",
            "item": "milk"
        }
    ],
    "equipment": [
        "Large pot",
        "Immersion blender",
        "Large spoon or ladle",
        "Knife and cutting board",
        "Measuring cups and spoons"
    ],
    "instructions": [
        [
            {"text": "Wash and slice the leeks. Mince garlic. Grate cheese."}
        ],
        [
            {"text": "Melt"},
            {"text": "2tbsp", "measurement": true},
            {"text": "of butter in pot. Add the leeks, and cook until a little bit soft, about"},
            {"text": "3 minutes.", "timescale": true}
        ],
        [
            {"text": "Add the garlic, cook a minute longer."}
        ],
        [
            {"text": "Add the potatoes and stock, and stir in the Dijon mustard and a dash of cayenne. You want the potatoes to be covered with about"},
            {"text": "an inch or so", "measurement": true},
            {"text": "of broth (this takes"},
            {"text": "~4-5 cups", "measurement": true},
            {"text": "of broth)."}
        ],
        [
            {"text": "Cover, bring to a boil, reduce heat to a simmer and cook until potatoes are soft and falling apart, about"},
            {"text": "20 minutes.", "timescale": true}
        ],
        [
            {"text": "Remove from heat. Using an immersion blender, puree until smooth."}
        ],
        [
            {"text": "Put back on low heat, stir in the cheese until melted."}
        ],
        [
            {"text": "Stir in milk and cream. Adjust seasonings with more salt, pepper, cheese and if too thick, thin out with more milk or stock."}
        ],
        [
            {"text": "Garnish with more cheese, chives, and crumbled bacon."}
        ]
    ]
}